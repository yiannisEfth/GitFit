<?xml version="1.0" encoding="utf-8"?>

<!-- This defines the circle shape drawable resource for the home fragment -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <gradient
        android:angle="45"
        android:centerX="45"
        android:centerY="45"
        android:endColor="#01f1fa"
        android:gradientRadius="45"
        android:startColor="#b2ff59"
        android:type="linear" />

    <size
        android:width="200dp"
        android:height="200dp" />

    <stroke
        android:width="1dp"
        android:color="#FFFFFF" />

    <!-- <padding
         android:left="10dp"
